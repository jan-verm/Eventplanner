<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ugent.eventplanner.MainActivity"
    android:orientation="vertical"
    android:weightSum="1.0">

    <Button
        android:id="@+id/browseEventsButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:layout_margin="10dp"
        android:onClick="handleEvents"
        android:text="Browse Events" />

    <Button
        android:id="@+id/BrowsePeopleButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:layout_margin="10dp"
        android:onClick="handlePeople"
        android:text="Browse People" />

</LinearLayout>
